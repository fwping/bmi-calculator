/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 单选按钮样式 */
.radio-label {
  margin-right: 30rpx;
  display: inline-block;
}

/* 表单输入框样式 */
input {
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 5rpx;
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 图表容器样式 */
.chart-container {
  width: 100%;
  height: 400rpx;
  margin: 30rpx 0;
}

/* 结果容器样式 */
.result-container {
  padding: 20rpx 0;
}

.bmi-value, .bmi-category {
  font-size: 18px;
  margin-bottom: 10rpx;
}

.bmi-description {
  font-size: 14px;
  color: #666;
  margin-top: 20rpx;
  line-height: 1.5;
}

/* 表格样式 */
.table {
  width: 100%;
  border: 1px solid #eee;
  border-radius: 5rpx;
  margin-top: 20rpx;
}

.table-header {
  display: flex;
  background-color: #f5f5f5;
  font-weight: bold;
}

.table-row {
  display: flex;
  border-top: 1px solid #eee;
}

.table-cell {
  flex: 1;
  padding: 20rpx;
  text-align: center;
}
